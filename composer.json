{
    "name": "retinens/laravel-bootstrap-toasts",
    "description": "This package provides an easy interface for using Bootstrap 5+ toast messages in a Laravel app.",
    "keywords": [
        "retinens",
        "laravel",
        "laravel-bootstrap-toasts"
    ],
    "homepage": "https://github.com/retinens/laravel-bootstrap-toasts",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Houssa",
            "email": "lucas@retinens.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Retinens\\LaravelBootstrapToasts\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Retinens\\LaravelBootstrapToasts\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Retinens\\LaravelBootstrapToasts\\LaravelBootstrapToastsServiceProvider"
            ],
            "aliases": {
                "LaravelBootstrapToasts": "Retinens\\LaravelBootstrapToasts\\Facades\\LaravelBootstrapToasts"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
